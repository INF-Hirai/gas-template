{
  "trailingComma": "none",
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": {
        "parser": "lwc"
      }
    },
    {
      "files": "**/lwc/**/*.js",
      "options": {
        "semi": true,
        "singleQuote": true,
        "bracketSpacing": true,
        "tabWidth": 2
      }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": {
        "parser": "html"
      }
    },
    {
      "files": "*.{cls,trigger}",
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
